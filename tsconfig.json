{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "rootDir": "src",
        "outFile": "build/ld41.js",

        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,

		"forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
		
		"strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
 
        "removeComments": true,
        "sourceMap": false,

        "lib": ["es5", "dom", "es2015", "es2016", "es2017"]
     },
    "exclude": [
        "build",
        "data",
        "sources"
    ]
}
