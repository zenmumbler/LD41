{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",

    "tasks": [
        {
            "group": "build",
            "label": "build",
            "command": "tsc",
            "args": ["--watch", "--project", "tsconfig.json"],
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
